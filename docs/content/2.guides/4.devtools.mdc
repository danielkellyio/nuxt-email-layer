export default defineEventHandler(async (event) => {
  const email = useEmail()

  return await email.send({
    to: 'test@example.com',
    subject: 'Test Email from Devtools',
    template: TestEmail,
    data: {
      userName: 'Test User',
      verificationCode: '123456',
      expiresIn: '10 minutes',
      supportUrl: 'https://help.example.com'
    }
  })
})
```

